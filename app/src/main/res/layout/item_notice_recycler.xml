<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_head"/>
        <TextView
            android:id="@+id/nameTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/avatarImage"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/contentTxtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试测试完hi测试测试趁热实测"
            android:layout_marginStart="90dp"
            android:layout_below="@+id/nameTxtId"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/dateTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/05/01  16:35"
            android:layout_marginEnd="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"/>
        <View
            android:id="@+id/divider"
            android:layout_below="@+id/contentTxtId"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:id="@+id/statusRelativeId"
            android:layout_width="match_parent"
            android:layout_below="@+id/divider"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/statusTxtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部确认"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
              />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>